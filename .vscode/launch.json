    "version": "0.2.0",
    "configurations": [
        {
            "name": "Spending API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "preLaunchTask": "Start_Dependency_Containers",
            "program": "${workspaceFolder}/spending-api/main.go",
            "env": {
                "APP_ENV": "dev",
                "BASIC_AUTH_USER": "admin",
                "BASIC_AUTH_PASSWORD": "password"
            },
        },
        {
            "name": "Spending UI",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/spending-ui",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
        }
    ]
}